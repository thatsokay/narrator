{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "jsx": "react"
  },
  "include": [
    "src/client/index.tsx",
    "src/server/server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
